		"@smui/icon-button": "^7.0.0",
		"@smui/textfield": "^7.0.0",
		"svelte-spa-router": "^4.0.1",
		"uuid": "^10.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@tsconfig/svelte": "^5.0.4",
		"@types/uuid": "^10.0.0",
		"concurrently": "^7.6.0",
		"playwright": "^1.48.1",
		"sass": "^1.61.0",
