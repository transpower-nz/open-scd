{
	"name": "@oscd-plugins/auto-doc",
	"private": true,
	"version": "1.1.1",
	"type": "module",
	"scripts": {
		"dev": "vite --mode STAND_ALONE",
		"build": "vite build",
		"_build:watch": "NODE_ENV=development vite build --watch",
