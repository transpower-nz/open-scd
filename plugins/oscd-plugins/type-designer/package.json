		"concurrently": "^7.6.0"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@tsconfig/svelte": "^5.0.4",
		"sass": "^1.61.0",
		"svelte": "^4.2.18",
		"svelte-check": "^3.8.5",
		"tslib": "^2.6.3",
		"typescript": "^5.5.3",
		"vite": "^5.4.1",
		"vite-plugin-css-injected-by-js": "^3.1.1"
	}
