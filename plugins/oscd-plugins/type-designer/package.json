{
	"name": "@oscd-plugins/type-designer",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --mode STAND_ALONE",
		"build": "vite build",
		"_build:watch": "NODE_ENV=development vite build --watch",
